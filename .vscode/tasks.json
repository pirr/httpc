{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/local/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=gnu11",
                "-fsanitize=address",
                "-ggdb3",
                "`pkg-config --cflags glib-2.0`",
                "${workspaceFolder}/src/*.c",
                "/usr/local/lib/libuv.a",
                "${file}",
                "-o",
                "${workspaceFolder}/build/Debug/outDebug/debug.o",
                "`pkg-config --libs glib-2.0`",
                "`pkg-config --libs jansson`",
                "`curl-config --libs`"
            ],
            "options": {
                "cwd": "${fileDirname}"
                // "env": {
                //     "LSAN_OPTIONS": "verbosity=1:log_threads=1:log_pointers=1"
                // }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}